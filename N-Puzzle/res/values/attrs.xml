<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes for an NPuzzleView -->
    <declare-styleable name="NPuzzleView">

        <!--
        The duration of the animation that moves a tile from its current place to the
        empty tile position. This value is expressed in milliseconds, and must be >=0
        -->
        <attr name="tileAnimationDuration" format="integer" />

        <!-- The clockwise rotation of the image, in degrees. Can be 0, 90, 180 and 270. Defaults to 0 -->
        <attr name="imageRotation" format="integer" />
    </declare-styleable>

    <!-- Attributes for a CustomDifficultyView -->
    <declare-styleable name="CustomDifficultyView">

        <!-- The minimum difficulty level -->
        <attr name="minDifficulty" format="integer" />
        <!-- The maximum difficulty level. Must be greater or equal than the minimum difficulty level -->
        <attr name="maxDifficulty" format="integer" />
    </declare-styleable>

    <!-- Attributes for a PuzzleSolutionControlsView -->
    <declare-styleable name="PuzzleSolutionControlsView">

        <!--
        The list of speed levels. This is a string containing integer values separated by the '|' character. There
        can be negative values. Repetitions are ignored.
        -->
        <attr name="speedLevels" format="string" />
    </declare-styleable>

</resources>